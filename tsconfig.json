{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "dist-esm",
    "_bundles",
    "./src/**/*.test.ts"
  ]
}
